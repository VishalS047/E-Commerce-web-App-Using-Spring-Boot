package com.shopme.mvcconfiguration;

import java.nio.file.Path;
import java.nio.file.Paths;

import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.config.annotation.ResourceHandlerRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

@Configuration
public class SpringMvcConfiguration implements WebMvcConfigurer {

	@Override
	public void addResourceHandlers(ResourceHandlerRegistry registry) {
		
		String dirName = "userphotos";
		
		Path userPhotoDirectory = Paths.get(dirName);
		
		System.out.println("userPhotosPath " + userPhotoDirectory);
	
		String userPhotosPath = userPhotoDirectory.toFile().getAbsolutePath();
		
		System.out.println("userPhotosPath" + userPhotosPath);
		
		registry.addResourceHandler("/" + dirName + "/**").addResourceLocations("file:/" + userPhotosPath + "/");
	}
}
